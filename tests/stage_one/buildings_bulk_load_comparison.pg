--6------------------------------------------------------
-- best_candidates bulk_load_outline_id

SELECT results_eq(
	'SELECT bulk_load_outline_id FROM buildings_bulk_load.matched ORDER BY bulk_load_outline_id',
	$$VALUES (2001), (2002),
