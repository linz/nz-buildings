------------------------------------------------------------------------------
-- Provide unit testing for buildings_bulk_load schema using pgTAP
------------------------------------------------------------------------------

-- Turn off echo.
\set QUIET 1

-- Format the output nicely.
\pset format unaligned
\pset tuples_only true
\pset pager

-- Revert all changes on failure.
\set ON_ERROR_ROLLBACK 1
\set ON_ERROR_STOP true


BEGIN;

CREATE EXTENSION IF NOT EXISTS pgtap;

SELECT plan(15);

--1----------------------------------------------------------
-- Check comparisons function exists

SELECT has_function('buildings_bulk_load', 'compare_building_outlines', 'Should have function compare_building_outlines in buildings_bulk_load schema.');

--2----------------------------------------------------------
-- Check comparisons function exists

SELECT has_function('buildings_bulk_load', 'find_added', 'Should have function find_added in buildings_bulk_load schema.');

--3----------------------------------------------------------
-- Check comparisons function exists

SELECT has_function('buildings_bulk_load', 'find_removed', 'Should have function find_removed in buildings_bulk_load schema.');

--4----------------------------------------------------------
-- Check comparisons function exists

SELECT has_function('buildings_bulk_load', 'find_related', 'Should have function find_related in buildings_bulk_load schema.');

--5----------------------------------------------------------
-- Check comparisons function exists

SELECT has_function('buildings_bulk_load', 'find_matched', 'Should have function find_matched in buildings_bulk_load schema.');

--6----------------------------------------------------------
-- New Buildings contents

SELECT results_eq(
    'SELECT bulk_load_outline_id FROM buildings_bulk_load.find_added(1) ORDER BY bulk_load_outline_id',
    $$VALUES (2003),
             (2010)$$,
    'Check contents of new buildings table after building comparison function has run'
);

--7----------------------------------------------------------
-- Removed Buildings contents

SELECT results_eq(
    'SELECT building_outline_id FROM buildings_bulk_load.find_removed(1) ORDER BY building_outline_id',
    $$VALUES (1004),
             (1006)$$,
    'Check contents of removed buildings table after building comparison function has run'
);

