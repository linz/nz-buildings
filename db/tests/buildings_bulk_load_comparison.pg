--9------------------------------------------------------
-- matched 

SELECT results_eq(
    'SELECT building_outline_id, bulk_load_outline_id FROM buildings_bulk_load.find_matched(1) ORDER BY building_outline_id',
    $$VALUES (1001, 2031), (1002, 2001),
             (1003, 2002), (1005, 2004)$$,
